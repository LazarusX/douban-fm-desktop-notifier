{
  "name": "豆瓣电台桌面提醒助手",
  "version": "1.0.1",
  "description": "为豆瓣电台网页版开启桌面提醒功能",
  "icons": {"16": "16.png", "48": "48.png", "128": "128.png"},
  "permissions": [
    "notifications"
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "48.png",
    "notify.js"
  ],
  "content_scripts": [  
        {  
            "matches": ["http://*.douban.fm/*"],  
            "js": ["content_script.js"],  
            "run_at": "document_end"  
        }  
    ] 
}